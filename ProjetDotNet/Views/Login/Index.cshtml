
@using (Html.BeginForm("process", "login", FormMethod.Post)){
        <section class="vh-100">
                <div class="container-fluid">
                        <div class="row">
                                <div class="col-sm-6 text-black">

       

                                        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                                                <div style="width: 23rem;">

                                                        <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>

                                                        <div class="form-outline mb-4">
                                                                <input type="email" name="email"  id="form2Example18" class="form-control form-control-lg" />
                                                                <label class="form-label" for="form2Example18">Email address</label>
                                                        </div>

                                                        <div class="form-outline mb-4">
                                                                <input type="password"  name="password" id="form2Example28" class="form-control form-control-lg" />
                                                                <label class="form-label" for="form2Example28">Password</label>
                                                        </div>

                                                        <div class="pt-1 mb-4">
                                                                <button class="btn btn-secondary btn-lg btn-block" type="submit">Login</button>
                                                        </div>
                                                        
                                                        @* error message div *@
                                                        <div class="text-danger">
                                                                @if (ViewData["error"] != null)
                                                                {

                                                                        <div class="alert alert-danger" role="alert">
                                                                                @ViewData["error"]
                                                                        </div>
                                                                        
                                                                }
                                                        </div>
                                                        
                                                        <p>Don't have an account? <a href="#!" class="link-info">Register here</a></p>

                                                </div>

                                        </div>

                                </div>
                                <div class="col-sm-6 px-0 d-none d-sm-block">
                                        <img src="./images/bannerInsat.png" alt="Sample" class="w-100" >
                                </div>
                        </div>
                </div>
        </section>
        @Html.AntiForgeryToken()
    
}

