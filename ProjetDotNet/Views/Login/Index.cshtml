<h3>Login Page</h3>
@ViewBag.error
@using (Html.BeginForm("process", "login", FormMethod.Post)){
    <table cellpadding="2" cellspacing="2">
        <tr>
            <td>Username</td>
            <td>
                <input type="text" name="email" />
            </td>
        </tr>
        <tr>
            <td>Password</td>
            <td>
                <input type="password" name="password" />
            </td>
        </tr>
        <tr>
            <td>&nbsp;</td>
            <td>
                <input type="submit" value="Login" />
            </td>
        </tr>
        @Html.AntiForgeryToken()
    </table>
}
