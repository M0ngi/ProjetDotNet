@page
@model ProjetDotNet.Views.Post.getMyPosts




<div>
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">@ViewBag.User.Name</h1>
            <p class="lead">@ViewBag.User.Email</p>
        </div>
    </div>
</div>


<div class="row">
       
    @foreach (Post post in @ViewBag.Posts)
    {
        <div class="col-md-4">
            <div class="card m-1">
                <div class="card-body">
                    <h5 class="card-title">@post.Title</h5>
                    <p class="card-text">@post.Content</p>
                    <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id" class="btn btn-secondary small">View</a>
                    @* if logged user is the owner of the post *@
                    @if(post.Author.Id == ((ProjetDotNet.Models.User) Context.Items["user"]!).Id)
                    {
                        <a asp-controller="Post" asp-action="DeletePost" asp-route-id="@post.Id" class="btn btn-danger small">Delete</a>
                    }
                </div>
            </div>
        </div>
           
    }
</div>
